{
	"name": "translate-react",
	"version": "0.1.0",
	"description": "A tool to translate React docs to any language",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"start": "bun run index.ts",
		"dev": "bun --watch --env-file=.env.development index.ts",
		"debug": "bun --inspect --env-file=.env.development index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,js,cjs,mjs,json,md}'"
	},
	"dependencies": {
		"@octokit/rest": "^21.1.0",
		"franc": "^6.2.0",
		"langs": "^2.0.0",
		"openai": "^4.78.1",
		"ora": "^8.1.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@types/langs": "^2.0.5",
		"@types/bun": "^1.2.2",
		"@types/eslint": "^9.6.1",
		"@types/node": "^20.11.24",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"prettier": "^3.4.2",
		"prettier-plugin-jsdoc": "^1.3.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
	}
}
