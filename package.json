{
	"name": "translate-react",
	"version": "0.1.17",
	"contributors": [
		{
			"name": "Nivaldo Farias",
			"url": "https://github.com/NivaldoFarias"
		}
	],
	"license": "MIT",
	"homepage": "https://github.com/NivaldoFarias/translate-react",
	"description": "A tool to translate React docs to any language",
	"type": "module",
	"scripts": {
		"start": "bun src/main.ts",
		"dev": "bun --watch src/main.ts",
		"build": "bun src/build.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "tsc",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage"
	},
	"dependencies": {
		"@langchain/textsplitters": "^0.1.0",
		"@octokit/request-error": "^7.0.1",
		"@octokit/rest": "^21.1.0",
		"bottleneck": "^2.19.5",
		"cld": "^2.10.1",
		"http-status-codes": "^2.3.0",
		"js-tiktoken": "^1.0.21",
		"openai": "^4.78.1",
		"pino": "^10.0.0",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.3.5",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.6.0",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"globals": "^16.0.0",
		"pino-pretty": "^13.1.2",
		"prettier": "^3.4.2",
		"prettier-plugin-jsdoc": "^1.3.2",
		"type-fest": "^4.37.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
	}
}
