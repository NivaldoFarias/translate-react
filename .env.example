# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
#
# This file provides a template for environment configuration.
# Copy this to `.env` and configure the required variables.
#
# Source of truth: src/utils/env.util.ts (envSchema)
#
# LEGEND:
# - REQUIRED: Must be set in .env (no default value)
# - OPTIONAL: Has default value, can be overridden
#
# =============================================================================

# -----------------------------------------------------------------------------
# Runtime Environment
# -----------------------------------------------------------------------------

# NODE_ENV="development"           # Node.js runtime environment (default: "development")
# BUN_ENV="development"            # Bun runtime environment (default: "development")
# LOG_LEVEL="info"                 # Logging verbosity: trace|debug|info|warn|error|fatal (default: "info")
# LOG_TO_CONSOLE=true              # Enable console logging in addition to file logs (default: true)

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------

# REQUIRED: GitHub Personal Access Token with 'repo' scope
GITHUB_TOKEN=

# OPTIONAL: Fork repository configuration
# REPO_FORK_OWNER="nivaldofarias"       # Fork owner username/org (default: "nivaldofarias")
# REPO_FORK_NAME="pt-br.react.dev"      # Fork repository name (default: "pt-br.react.dev")

# OPTIONAL: Upstream repository configuration
# REPO_UPSTREAM_OWNER="reactjs"         # Upstream owner username/org (default: "reactjs")
# REPO_UPSTREAM_NAME="pt-br.react.dev"  # Upstream repository name (default: "pt-br.react.dev")

# OPTIONAL: GitHub API timeout in milliseconds
# GITHUB_REQUEST_TIMEOUT=30000          # Timeout for GitHub API requests (default: 30000ms / 30s)

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------

# REQUIRED: OpenAI-compatible API key (OpenRouter, Azure OpenAI, etc.)
OPENAI_API_KEY=

# OPTIONAL: LLM API endpoint and model configuration
# LLM_MODEL="google/gemini-2.0-flash-exp:free"        # Model ID (default: Gemini 2.0 Flash on OpenRouter)
# OPENAI_BASE_URL="https://api.openrouter.com/v1"     # API base URL (default: OpenRouter endpoint)
# OPENAI_PROJECT_ID=                                  # Optional: OpenAI project ID for activity tracking
# MAX_TOKENS=8192                                     # Maximum tokens per LLM response (default: 8192)

# OPTIONAL: OpenRouter activity tracking headers
# HEADER_APP_URL="https://github.com/NivaldoFarias/translate-react"     # App URL for OpenRouter tracking
# HEADER_APP_TITLE="translate-react v0.1.12"                            # App title for OpenRouter tracking

# -----------------------------------------------------------------------------
# Translation Settings
# -----------------------------------------------------------------------------

# OPTIONAL: Translation language configuration
# TARGET_LANGUAGE="pt-br"   # Target translation language (default: "pt-br")
# SOURCE_LANGUAGE="en"      # Source language to translate from (default: "en")

# OPTIONAL: Processing batch size
# BATCH_SIZE=10             # Number of files to process in parallel (default: 10)

# -----------------------------------------------------------------------------
# Development / Debug Configuration
# -----------------------------------------------------------------------------

# OPTIONAL: Progress tracking issue number (for automated status updates)
# PROGRESS_ISSUE_NUMBER=555   # GitHub issue number for progress reports (default: 555)

# OPTIONAL: Development mode flags
# FORCE_SNAPSHOT_CLEAR=false    # Clear snapshot cache on startup (default: false)
# DEV_MODE_FORK_PR=false        # Create PRs in fork instead of upstream (default: false)